<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginBottom="@dimen/margin_large"
    android:layout_marginTop="@dimen/margin_large"
    android:background="#1dcd76"
    android:clipChildren="false"
    android:focusable="true"
    android:orientation="vertical">

    <org.sitebay.android.widgets.WPTextView
        android:id="@+id/feature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:text="Feature Name" />

    <org.sitebay.android.widgets.WPTextView
        android:id="@+id/feature_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/background_default"
        tools:text="Feature Description" />

</LinearLayout>
