<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_extra_large"
    android:paddingTop="@dimen/margin_extra_large"
    android:paddingEnd="@dimen/margin_extra_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/learn_more_icon"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_marginEnd="@dimen/margin_extra_extra_medium_large"
            android:contentDescription="@null"
            android:visibility="invisible"
            tools:src="@drawable/ic_info_outline_white_24dp"
            tools:tint="?attr/colorOnSurface"
            tools:visibility="visible" />

        <org.sitebay.android.widgets.WPTextView
            android:id="@+id/learn_more_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:visibility="invisible"
            tools:text="Learn more text"
            tools:visibility="visible" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/learn_more_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginBottom="@dimen/margin_extra_small"
        android:visibility="gone"
        tools:text="@string/learn_more"
        tools:visibility="visible" />

    <View
        android:id="@+id/bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_extra_large" />

</LinearLayout>
