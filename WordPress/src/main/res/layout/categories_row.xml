<?xml version="1.0" encoding="utf-8"?>
<org.sitebay.android.widgets.CheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoryRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/category_row_height"
    android:clickable="false"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/categoryRowText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        tools:text="Pony Category" />
</org.sitebay.android.widgets.CheckedLinearLayout>
